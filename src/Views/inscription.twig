{% extends "layout.twig" %}

    {% block title %}<h1 class="jumbotron jumbotron-fluid text-center h1">Inscrivez-vous !</h1>{% endblock %}

    {% block contents %}

        <h2>Vous êtes déjà inscrit ? Connectez-vous :</h2>

        <form method="post" action="http://localhost/projet4/public/?page=sendconnection">
            <label for="pseudo">Votre pseudo :</label>
