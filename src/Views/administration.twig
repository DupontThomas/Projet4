{% extends "layout.twig" %}

{% block title %} Bienvenue dans l'interface d'administration {% endblock %}

        {% block contents %}

            <h2>Ajouter un nouveau chapitre :</h2>

            <div class="modify">
                <form method="post" action="http://localhost/projet4/public/?page=addPost">
                    <label for="title">Titre</label>
                    <input type="text" name="titleNewPost">

                    <textarea aria-label="content" id="contentNewPost" name="contentNewPost" rows="22" cols ="100"></textarea>

                    <input type="submit" value="Publier">
                </form>
            </div>
            <h2>Commentaires signalés :</h2>

            {% for content in contents %}

                <div class="card">
                    <h5 class="card-header"><span class="card-title">Posté par : {{ content.author }} le {{ content.date_publication_fr }} </span>  // <a href="http://localhost/projet4/public/?page=chapter&id={{ content.id_post}}"> Lien vers le chapitre</a> </h5>
                    <div>
                        <p>{{ content.comment }}</p>
                        <a  class="btn btn-primary space validComment btnAdminComment" href="http://localhost/projet4/public/?page=valcom&id={{ content.id }}">Valider</a>
                        <a  class="btn btn-primary space supprComment btnAdminComment" href="http://localhost/projet4/public/?page=delcom&id={{ content.id }}">Supprimer</a>
                    </div>
                </div>

            {% endfor %}

        {% endblock contents %}

{% block script %}

        <script src="https://cdn.tiny.cloud/1/86dwj93jeidl87z3q3afvplo43p9md7qlo4xpeq0hkuqinwu/tinymce/5/tinymce.min.js"></script>
        <script>tinymce.init({
                selector: "textarea",
                width: 755,
                height: 500,
                resize: false,
                elements:"contenu",
                language : "fr_FR",
                encoding: "UTF-8",
                force_p_newlines : false,
                forced_root_block : false,
                force_br_newlines : true,
                menubar: false,
                plugins: [
                    'advlist autolink lists link image charmap print preview anchor',
                    'searchreplace visualblocks code fullscreen',
                    'insertdatetime media table paste code help wordcount'
                ],
                toolbar: 'undo redo | formatselect | bold underline italic backcolor | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | removeformat | help',

        })</script>

{% endblock %}