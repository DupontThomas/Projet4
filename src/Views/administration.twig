{% extends "layout.twig" %}

{% block title %} <h1>Bienvenue dans l'interface d'administration</h1> {% endblock %}

        {% block contents %}

            <h2>Ajouter un nouveau chapitre :</h2>

            <form method="post" action="http://localhost/projet4/public/?page=addPost">
                <label for="title">Titre</label>
                <input type="text" name="titleNewPost">

                <textarea aria-label="content" name="contentNewPost" rows="22" cols ="100"></textarea>

                <input type="submit" value="Publier">
            </form>

        {% endblock contents %}




