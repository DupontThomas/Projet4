{% extends "layout.twig" %}

{% block title %} {{ posts.title }}{% endblock %}

        {% block posts %}

            <div>
                <section>
                    <h3> Partie {{ posts.id }} : <strong>{{ posts.title }}</strong> | Publié le {{ posts.postDate }}</h3>
                    <div>
                        <p>{{ posts.content }}</p>
                    </div>

                </section>
            </div>

        {% endblock posts %}



{% block comments %}
    <h4>Commentaires : </h4>

    {% for comment in comments %}
        <section>

            <h5>Posté par : <strong>{{ comment.author }}</strong>, le {{ comment.date_publication_fr }}</h5>
            <div>
                <p>{{ comment.comment }}</p>
            </div>
        </section>

    {% endfor %}
{% endblock comments %}

