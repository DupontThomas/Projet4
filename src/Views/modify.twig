{% extends "layout.twig" %}

{% block title %} <h1 class="jumbotron jumbotron-fluid text-center h1">Modifier un chapitre</h1> {% endblock title%}

{% block contents %}

    <div class="modify">
        <form method="post" action="http://localhost/projet4/public/?page=updatePost&id={{ contents.id }}">
            <label for="title">Titre</label>
            <input type="text" class="text-center" name="titleUpdatePost" value="{{ contents.title }}">

            <textarea aria-label="content" id="contentUpdatePost" name="contentUpdatePost" rows="22" cols ="100">{{ contents.content | raw }}</textarea>

            <button class="button modifyPost" type="submit">Mettre Ã  jour</button>
        </form>
    </div>

{% endblock contents %}


{% block script %}

    <script src="https://cdn.tiny.cloud/1/86dwj93jeidl87z3q3afvplo43p9md7qlo4xpeq0hkuqinwu/tinymce/5/tinymce.min.js"></script>
    <script>tinymce.init({
            selector: "textarea",
            width: 755,
            height: 500,
            resize: false,
            elements:"contenu",
            language : "fr_FR",
            encoding: "UTF-8",
            force_p_newlines : false,
            forced_root_block : false,
            force_br_newlines : true,
            menubar: false,
            plugins: [
                'advlist autolink lists link image charmap print preview anchor',
                'searchreplace visualblocks code fullscreen',
                'insertdatetime media table paste code help wordcount'
            ],
            toolbar: 'undo redo | formatselect | bold underline italic backcolor | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | removeformat | help',

        })</script>

{% endblock %}